<?xml version="1.0" encoding="utf-8"?>
<scale xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000"
    android:fillAfter="true"
    android:fromXScale="1"
    android:fromYScale="1"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toXScale="3"
    android:toYScale="3" >

    <!--
    android:fillAfter：停在最后一帧 
    android:pivotX="50%":%以自己为坐标，50，自己x的中心点
    android:pivotX="50%p":%p以父控件为坐标,50,父控件x的中心点
    -->

</scale>